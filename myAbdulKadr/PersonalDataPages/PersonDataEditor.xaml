<UserControl x:Class="hydrogen.PersonDataEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             mui:ModernFrame.KeepAlive="False"
             d:DesignHeight="600" d:DesignWidth="1000"
             >
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->

        <mui:ModernTab Layout="List" x:Name="PersonalOperations"  Links="{Binding Path=IPList}">
           
        </mui:ModernTab>
        <StackPanel x:Name="LayoutRoot" xmlns:lib="clr-namespace:hydrogen.PersonalDataPages" VerticalAlignment="Bottom" Width="70" HorizontalAlignment="Left">
            <TextBox Grid.Row="11" Grid.Column="2" x:Name="MyTextBox" Width="100" />
            <lib:UserControlPersonID UserName="{Binding Path=Text, ElementName=MyTextBox, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
  
</UserControl>
